<div>
    <h1>Blog page</h1>
    <form id="blogSearch" action="/blog" method="GET">
        <label for="blogSearch">Search term: </label> 
        <input id="blogSearch" name="blogSearch" placeholder="Insert your search term">
        <button type="submit">Search blog posts</button>
    </form>
    <p>Here will be my blog posts<p>
        <% blogData.forEach(bd => { %>
            <p><%=bd.name%></p>
            <p><%=bd.content%></p>
            <%
        }); %>
        <% if(loggedIn) { %>
            <form action="/create_post" method="POST" class="loginArea">
                <h1>Add new blog post:</h1>
                <label for="inputTitle">Title</label>
                <input class="form-control" type="text" name="title" id="inputTitle" placeholder="Title">
                <label for="textarea">Text area</label>
                <textarea name="post" placeholder="write your post here" rows="5" cols="40" class="textarea"></textarea>
                <button type="submit">Post</button>
            </form>
        <% } %>
</div>